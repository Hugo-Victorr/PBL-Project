@model List<DispositivoViewModel>

<h2>Listagem de Dispositivos</h2>

<a href="/dispositivo/CreateDispositivo" class="btn btn-success">Novo registro</a>
<br />
<br />
<table class="table table-striped table-responsive">
    <tr>
        <th>Código</th>
        <th>Descrição</th>
        <th>Unidade</th>
        <th>Data de Instalação</th>
        <th>Imagem</th>
        <th>Ações</th>
    </tr>

    @foreach (DispositivoViewModel dispositivo in Model)
    {
        <tr>
            <td>@dispositivo.Id</td>
            <td>@dispositivo.Modelo.ToString()</td>
            <td>@dispositivo.UnidadeNome</td>
            <td>@dispositivo.DataInstalacao.ToShortDateString()</td>
            <td>
                <img id="imgPreview" src="data:image/jpeg;base64,@dispositivo.ImagemEmBase64"
                     class="img-responsive" width="50">
            </td>
            <td>
                <a href="/dispositivo/EditDispositivo?id=@dispositivo.Id">
                    <img src="~/imagens/editIcon.png" width="20" height="20">
                </a>
                <a href="javascript:apagarDispositivo('@dispositivo.device_id', '@dispositivo.Id')">
                    <img src="~/imagens/trashIcon.png" width="20" height="20">
                </a>
            </td>
        </tr>
    }
</table>