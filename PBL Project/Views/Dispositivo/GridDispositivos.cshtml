@model List<DispositivoViewModel>

<table class="table table-striped table-responsive">
    <tr>
        <th>Código</th>
        <th>Descrição</th>
        <th>Unidade</th>
        <th>Data de Instalação</th>
    </tr>

    @foreach (DispositivoViewModel dispositivo in Model)
    {
        <tr>
            <td>@dispositivo.Id</td>
            <td>@dispositivo.Modelo.ToString()</td>
            <td>@dispositivo.UnidadeNome</td>
            <td>@dispositivo.DataInstalacao.ToShortDateString()</td>
        </tr>
    }
</table>
