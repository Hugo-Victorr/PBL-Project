@model List<CategoriaViewModel>

<h2>Listagem de Categorias</h2>

<a href="/categoria/Create" class="btn btn-success">Novo registro</a>
<br />
<br />
<table class="table table-striped table-responsive">
    <tr>
        <th>Código</th>
        <th>Descrição</th>
        <th>Ações</th>
    </tr>

    @foreach (var categoria in Model)
    {
        <tr>
            <td>@categoria.Id</td>
            <td>@categoria.Descricao</td>
            <td>
                <a href="/categoria/edit?id=@categoria.Id">
                    <img src="~/imagens/editIcon.png" width="20" height="20">
                </a>
                <a href="javascript:apagarCategoria(@categoria.Id)">
                    <img src="~/imagens/trashIcon.png" width="20" height="20">
                </a>
            </td>
        </tr>
    }
</table>