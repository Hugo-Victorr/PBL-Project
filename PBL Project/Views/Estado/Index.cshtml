@model List<EstadoViewModel>

<h2>Listagem de Estados</h2>

<a href="/estado/Create" class="btn btn-success">Novo registro</a>
<br />
<br />
<table class="table table-striped table-responsive">
    <tr>
        <th>Código</th>
        <th>Descrição</th>
        <th>Ações</th>
    </tr>

    @foreach (var estado in Model)
    {
        <tr>
            <td>@estado.Id</td>
            <td>@estado.Descricao</td>
            <td>
                <a href="/estado/edit?id=@estado.Id">
                    <img src="~/imagens/editIcon.png" width="20" height="20">
                </a>
                <a href="javascript:apagarEstado(@estado.Id)">
                    <img src="~/imagens/trashIcon.png" width="20" height="20">
                </a>
            </td>
        </tr>
    }
</table>
