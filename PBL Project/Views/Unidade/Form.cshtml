@model UnidadeViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Cadastro de Unidade</h2>

<!-- <marquee behavior="alternate">  -->
<form action="SaveUnidade" method="post" class="col-md-6">

    <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />

    <label for="Id" class="control-label">Id</label>
    <input asp-for="Id" class="form-control" readonly />
    <span asp-validation-for="Id" class="text-danger"></span>
    <br />

    <label for="Descrição" class="control-label">Nome da unidade</label>
    <input asp-for="Descricao" class="form-control" />
    <span asp-validation-for="Descricao" class="text-danger"></span>
    <br />

    <label for="EmpresaId" class="control-label">Empresa Id</label>
    <input asp-for="EmpresaId" value="@ViewBag.EmpresaId" class="form-control" readonly />
    <span asp-validation-for="EmpresaId" class="text-danger"></span>
    <br />

    <label for="Estado" class="control-label">Estado</label>
    <select asp-for="EstadoId" asp-items="ViewBag.Estados" class="form-control"> </select>
    <span asp-validation-for="EstadoId" class="text-danger"></span>
    <br />

    <label for="Data de Fundação" class="control-label">Data de Fundação</label>
    <input asp-for="DataFundacao" type="date" value="@Model.DataFundacao.ToString("yyyy-MM-dd")" class="form-control" />
    <span asp-validation-for="DataFundacao" class="text-danger"></span>

    <br />
    <input type="submit" value="Salvar dados" class="btn btn-info" />
    <br />
</form>
