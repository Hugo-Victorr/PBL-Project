
@model List<EmpresaViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listagem de Empresas</h2>

<br />
<a href="/empresa/Create" class="btn btn-success">Novo registro</a>
<br />

<br />
<table class="table table-striped table-responsive" id="tbListagemEmpresas">
    <tr>
        <th>Código</th>
        <th>Descrição</th>
        <th>Categoria</th>
        <th>Estado</th>
        <th>Data de Fundação</th>
        <th>Imagem</th>
        <th>Ações</th>
    </tr>

    @foreach (EmpresaViewModel empresa in Model)
    {
        <tr>
            <td>@empresa.Id</td>
            <td>@empresa.Descricao</td>
            <td>@empresa.CategoriaNome</td>
            <td>@empresa.EstadoNome</td>
            <td>@empresa.DataFundacao.ToShortDateString()</td>
            <td>
                <img id="imgPreview" src="data:image/jpeg;base64,@empresa.ImagemEmBase64"
                     class="img-responsive" width="50">
            </td>
            <td>
                <a href="/empresa/edit?id=@empresa.Id">
                    <img src="~/imagens/editIcon.png" width="20" height="20">
                </a>
                <a href="/unidade/indexFiltrado?id=@empresa.Id">
                    <img src="~/imagens/openIcon.png" width="20" height="20">
                </a>
                <a href="javascript:apagarEmpresa(@empresa.Id)">
                    <img src="~/imagens/trashIcon.png" width="20" height="20">
                </a>
            </td>
        </tr>
    }
</table>
