@model EmpresaViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Cadastro de Empresa</h2>

<!-- <marquee behavior="alternate">  -->
<form action="Save" enctype="multipart/form-data" method="post" class="col-md-6">

    <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />

    <label for="Id" class="control-label">Id</label>
    <input asp-for="Id" class="form-control" readonly />
    <span asp-validation-for="Id" class="text-danger"></span>
    <br />

    <label for="Descrição" class="control-label">Nome da empresa</label>
    <input asp-for="Descricao" class="form-control" />
    <span asp-validation-for="Descricao" class="text-danger"></span>
    <br />

    <label for="Categoria" class="control-label">Categoria</label>
    <select asp-for="CategoriaId" asp-items="ViewBag.Categorias" class="form-control"> </select>
    <span asp-validation-for="CategoriaId" class="text-danger"></span>
    <br />

    <label for="Estado" class="control-label">Estado</label>
    <select asp-for="EstadoId" asp-items="ViewBag.Estados" class="form-control"> </select>
    <span asp-validation-for="EstadoId" class="text-danger"></span>
    <br />

    <label for="Data de Fundação" class="control-label">Data de Fundação</label>
    <input asp-for="DataFundacao" type="date" value="@Model.DataFundacao.ToString("yyyy-MM-dd")" class="form-control" />
    <span asp-validation-for="DataFundacao" class="text-danger"></span>

    <br />
    <input type="file" name="Imagem" id="Imagem" onchange="exibirImagem()" class="btn btn-secondary">
    <img id="imgPreview" src="data:image/jpeg;base64,@Model.ImagemEmBase64" class="img-responsive" width="200">
    <span asp-validation-for="Imagem" class="text-danger"></span>

    <br />
    <input type="submit" value="Salvar dados" class="btn btn-info" />
    <br />
</form>
